@page
@model CandyHeaven.Pages.ShoppingCart.ShippingModel
@{
}



<form method="post">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th colspan="2">Produkt</th>
                <th class="text-center">Antal</th>
                <th>Summa</th>
            </tr>
        </thead>
        @foreach (var product in Model.ShoppingCart)
        {
            <tr>
                <td><img class="cart-images" src="@product.ImageURL" alt="@product.Name image" /></td>
                <td>@product.Name <br />@(product.StockQuantity > 0 ? "Finns i lager" : "Ej i lager")</td>
                <td>
                    <a asp-page="ShoppingCart" asp-route-removeId="@product.Id" class="btn btn-outline-dark">-</a>
                    <a asp-page="ShoppingCart" asp-route-addId="@product.Id" class="btn btn-outline-dark">+</a>

                </td>
                @*<td><input type="number" name="quantities" value="@product.StockQuantity" min="1" style="width: 50px;" /></td>*@
                <td>@product.Price.ToString("n2") kr</td>
            </tr>
        }
        <tfoot>
            <tr>
                <td colspan="2"><h4>Totala summan: <br />Inkl. Frakt och Moms</h4></td>
                <td></td>
                <td><h4>@(Model.FraktSum == 0? @Model.Sum.ToString("n2") : @Model.FraktSum.ToString("n2")) kr</h4></td>
            </tr>
        </tfoot>
    </table>
    
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Leveranssätt</th>
                <th>Pris</th>
            </tr>
        </thead>
        <tr>
            <td>
                Förnamn: <input asp-for="@Model.Name" required /><br />
                Efternamn: <input asp-for="@Model.LastName" required /><br />
                Email:<input asp-for="@Model.Email" required /><br />
                Adress:<input asp-for="@Model.Adress" required />


                <p>Välj leveranssätt:</p>

                <input type="radio" asp-for="@Model.Frakt" value="DHL" required>
                <label for="DHL">DHL Express</label><br>

                <input type="radio" asp-for="@Model.Frakt" value="Instabox">
                <label for="InstaBox">Instabox</label><br>


                <input type="radio" asp-for="@Model.Frakt" value="Hämta i butik">
                <label for="Butik">Hämta i butik</label>



                <p>


                    <button style="font-family: 'Lobster', cursive;" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                        Välj Betalningssätt
                    </button>
                </p>
                @*<div class="collapse" id="collapseExample">
                    <div class="card card-body">*@


                <input type="radio" id="html" name="Payment" value="HTML" required>
                <label for="html">VISA/MasterCard</label><br>
                <input type="radio" id="css" name="Payment" value="Fakturabetalning">
                <label for="css">Klarna</label><br>
                <input type="radio" id="javascript" name="Payment" value="JavaScript">
                <label for="javascript">Swish</label>


                <!--<-->@*/div>
                    </div*@<!-->-->

                <input type="submit" class="btn btn-outline-dark btn-lg" href="Shipping" role="button" value="BEKRÄFTA UPPGIFTERNA">

            </td>
        </tr>
    </table>
</form>
  <a style="font-family: 'Lobster', cursive;" class="btn btn-primary btn-lg" href="OrderSuccessful" role="button">FORSÄTT</a>
 

     
 


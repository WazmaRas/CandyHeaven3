@page
@model CandyHeaven.Pages.CandyBagModel
@{
}
<form method="get">
    <div class="input-group">
        <input class="form-check form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Sök</button>
        </div>
    </div>
</form>
<div class="row">
    @foreach (var item in Model.Products)
    {
        if (item is Models.CandyBag)
        {
    <div class="card col-3" style="width: 18rem;">
        <img class="card-img-top" src=@item.ImageURL alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>

            <h6>@item.Price kr</h6>
            <p>


                <button style="font-family: 'Lobster', cursive;" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Mer info
                </button>
            </p>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    @item.ProductInfo
                    <h6 style="font-family: 'Lobster', cursive;">
                        Vikt på påsen:
                        @(((Models.CandyBag)item).Weight) gram
                    </h6>

                    @if (item.StockQuantity > 0)
                    {
                        <h6 style="font-family: 'Lobster', cursive;"> Finns på lager</h6>
                    }
                    else
                    {
                        <h6> Ej på lager</h6>
                    }
                </div>
            </div>

            <a style="font-family: 'Lobster', cursive;" asp-route-id=@item.Id class="btn btn-primary">Lägg till i varukorg</a>

        </div>
    </div>

        }


    }
</div>
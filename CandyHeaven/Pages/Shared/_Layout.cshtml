<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://kit.fontawesome.com/83169cd7b9.js" crossorigin="anonymous"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CandyHeaven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="#!">
                    <img src="~/CandyHeavenLogo.png" height="50" alt="mdb logo">
                </a>
                <a style="font-family: 'Lobster', cursive;" class="navbar-brand" asp-area="" asp-page="/Index">Candy Heaven</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/BulkCandy">Lösvikt <i class="fas fa-candy-cane"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/CandyBag">Godis påsar <i class="fas fa-ghost"></i></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ListOfBars">Bars <i class="fas fa-cookie-bite"></i></a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/CandyShop">Alla produkter <i class="fas fa-snowman"></i></a>

                        </li>



                    </ul>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="basicExampleNav1">


                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/ShoppingCart/ShoppingCart" class="nav-link navbar-link-2 waves-effect">

                            <i class="fas fa-shopping-cart"></i>
                        </a>


                    <li class="nav-item">
                        <a href="#!" class="nav-link waves-effect">
                            Contact
                        </a>
                    </li>

                </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CandyHeaven - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
